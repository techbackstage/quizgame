<UserControl x:Class="ConsoleApp1.Window7Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#23232b">
    <Grid Background="#23232b">
        <Border Background="#23232b" CornerRadius="16" Padding="0" Margin="12,12,12,12" BorderBrush="#262631" BorderThickness="2">
            <StackPanel>
                <!-- Title -->
                <Border Background="#23232b" Padding="0,18,0,16" CornerRadius="16,16,0,0">
                    <TextBlock Text="Statistik" FontSize="24" FontWeight="Bold" Foreground="#f3f3f7" HorizontalAlignment="Left" Margin="8,0,0,0"/>
                </Border>
                <!-- Verlauf der Spielergebnis -->
                <TextBlock Text="Verlauf der Spielergebnis" FontSize="15" Foreground="#7e8193" Margin="16,0,0,0"/>
                <!-- Simple Line Chart Placeholder -->
                <Border Background="#23232b" Margin="16,8,16,0" Height="56" CornerRadius="8" BorderBrush="#262631" BorderThickness="1">
                    <Canvas>
                        <!-- Simulated line chart with Polyline -->
                        <Polyline Points="8,40 28,28 48,36 68,24 88,32 108,28 128,36 148,20" Stroke="#4e7cff" StrokeThickness="2"/>
                    </Canvas>
                </Border>
                <!-- Gurchschnittiche Winschstat -->
                <StackPanel Orientation="Horizontal" Margin="16,12,16,0" VerticalAlignment="Center">
                    <TextBlock Text="Gurchschnittiche" FontSize="15" Foreground="#7e8193"/>
                    <TextBlock Text=" " Width="8"/>
                    <TextBlock Text="Winsschtat" FontSize="15" Foreground="#7e8193"/>
                    <TextBlock Text=" " Width="16"/>
                    <TextBlock Text="7,5" FontSize="15" Foreground="#bfc1ce" HorizontalAlignment="Right"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
