<UserControl x:Class="application.Window1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#232533">
    <Grid Background="#232533">
        <Border Background="#191A23" CornerRadius="16" Margin="16" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="32,24" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="HOME" Foreground="#E6E8F0" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,32"/>
                <Button x:Name="QuizStartenButton" Content="Quiz starten" Height="56" Margin="0,0,0,16" FontSize="22" FontWeight="SemiBold"
                        Background="#4B5AFF" Foreground="#E6E8F0" BorderThickness="0"/>
                <Button x:Name="KategorienButton" Content="Kategorien verwalten" Height="56" Margin="0,0,0,16" FontSize="22" FontWeight="SemiBold"
                        Background="#232533" Foreground="#E6E8F0" BorderThickness="0"/>
                <Button x:Name="StatistikButton" Content="Statistik ansehen" Height="56" FontSize="22" FontWeight="SemiBold"
                        Background="#232533" Foreground="#E6E8F0" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
