<UserControl x:Class="QuizGame.Application.UI.Window5Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#23232b">
    <Grid Background="#23232b">
        <Border Background="#23232b" CornerRadius="16" Padding="0" Margin="16,12,16,12" BorderBrush="#262631" BorderThickness="2">
            <StackPanel>
                <!-- Title -->
                <Border Background="#23232b" Padding="0,18,0,16" CornerRadius="16,16,0,0">
                    <TextBlock x:Name="QuestionProgressTextBlock" Text="Frage 1 von 10" FontSize="26" FontWeight="Bold" Foreground="#f3f3f7" HorizontalAlignment="Left" Margin="18,0,0,0"/>
                </Border>
                <!-- Question -->
                <Border Background="#23232b" Padding="0,0,0,18">
                    <TextBlock x:Name="QuestionTextBlock" Text="" TextWrapping="Wrap" FontSize="17" Foreground="#bfc1ce" Margin="18,0,18,0"/>
                </Border>
                <!-- Answers -->
                <StackPanel Orientation="Vertical" Margin="12,0,12,18" Background="#23232b">
                    <Button x:Name="AnswerButton1" Content="" Height="38" Margin="0,0,0,10" Background="#23232b" Foreground="#bfc1ce" FontSize="16" BorderBrush="#262631" BorderThickness="2" HorizontalContentAlignment="Left" Padding="18,0,0,0"/>
                    <Button x:Name="AnswerButton2" Content="" Height="38" Margin="0,0,0,10" Background="#23232b" Foreground="#bfc1ce" FontSize="16" BorderBrush="#262631" BorderThickness="2" HorizontalContentAlignment="Left" Padding="18,0,0,0"/>
                    <Button x:Name="AnswerButton3" Content="" Height="38" Margin="0,0,0,10" Background="#23232b" Foreground="#bfc1ce" FontSize="16" BorderBrush="#262631" BorderThickness="2" HorizontalContentAlignment="Left" Padding="18,0,0,0"/>
                    <Button x:Name="AnswerButton4" Content="" Height="38" Margin="0" Background="#23232b" Foreground="#bfc1ce" FontSize="16" BorderBrush="#262631" BorderThickness="2" HorizontalContentAlignment="Left" Padding="18,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
