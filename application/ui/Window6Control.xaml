<UserControl x:Class="application.Window6Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#23232b">
    <Grid Background="#23232b">
        <Border Background="#23232b" CornerRadius="16" Padding="0" Margin="16,12,16,12" BorderBrush="#262631" BorderThickness="2">
            <StackPanel>
                <!-- Title -->
                <Border Background="#23232b" Padding="0,18,0,16" CornerRadius="16,16,0,0">
                    <TextBlock Text="Scoreboard" FontSize="26" FontWeight="Bold" Foreground="#f3f3f7" HorizontalAlignment="Left" Margin="18,0,0,0"/>
                </Border>
                <!-- Category and Score -->
                <StackPanel Orientation="Vertical" Margin="18,0,0,0">
                    <TextBlock Text="Geschichte" FontSize="16" Foreground="#bfc1ce" Margin="0,0,0,2"/>
                    <TextBlock>
                        <Run Text="8" FontSize="22" FontWeight="Bold" Foreground="#f3f3f7"/>
                        <Run Text="  von 10 richtig" FontSize="16" Foreground="#bfc1ce"/>
                    </TextBlock>
                </StackPanel>
                <!-- Divider -->
                <Border Height="1" Background="#262631" Margin="18,18,18,0"/>
                <!-- Filters -->
                <StackPanel Orientation="Vertical" Margin="18,8,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Durchschnittliche Punktzahl" FontSize="15" Foreground="#7e8193"/>
                        <TextBlock Text="✔" FontSize="15" Foreground="#7e8193" Margin="8,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,2,0,0">
                        <TextBlock Text="Geschichte" FontSize="15" Foreground="#7e8193"/>
                        <TextBlock Text="✔" FontSize="15" Foreground="#7e8193" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
                <!-- Divider -->
                <Border Height="1" Background="#262631" Margin="18,18,18,0"/>
                <!-- History -->
                <StackPanel Orientation="Vertical" Margin="18,8,0,0">
                    <TextBlock Text="Jahresergebnisse" FontSize="15" Foreground="#7e8193" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                        <TextBlock Text="10. Apr. 2024" FontSize="15" Foreground="#bfc1ce" Width="120"/>
                        <TextBlock Text="9 / 10" FontSize="15" Foreground="#bfc1ce"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="4. Apr. 2024" FontSize="15" Foreground="#bfc1ce" Width="120"/>
                        <TextBlock Text="6 / 10" FontSize="15" Foreground="#bfc1ce"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
