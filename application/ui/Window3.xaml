<Window x:Class="ConsoleApp1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kategorie hinzufügen" Height="340" Width="600" Background="#232533" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#232533">
        <Border Background="#191A23" CornerRadius="16" Margin="16" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="32,24" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <TextBlock Text="Kategorie hinzufügen" Foreground="#E6E8F0" FontSize="32" FontWeight="Bold" Margin="0,0,0,24"/>
                <TextBlock Text="Kategorie  Name" Foreground="#E6E8F0" FontSize="18" Margin="0,0,0,8"/>
                <TextBox Height="40" FontSize="18" Background="#232533" Foreground="#E6E8F0" BorderThickness="0" Margin="0,0,0,24"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Height="40" Width="120" FontSize="18" FontWeight="SemiBold" Background="#4B5AFF" Foreground="#E6E8F0" BorderThickness="0" Margin="0,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="14">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        Speichern
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
