<UserControl x:Class="QuizGame.Application.UI.Window3Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#232533">
    <Grid Background="#232533">
        <Border Background="#191A23" CornerRadius="16" Margin="16" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="32,24" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <TextBlock Text="Kategorie hinzufÃ¼gen" Foreground="#E6E8F0" FontSize="32" FontWeight="Bold" Margin="0,0,0,24"/>
                <TextBlock Text="Kategorie  Name" Foreground="#E6E8F0" FontSize="18" Margin="0,0,0,8"/>
                <TextBox x:Name="CategoryNameBox" Height="40" FontSize="18" Background="#232533" Foreground="#E6E8F0" BorderThickness="0" Margin="0,0,0,24"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="SaveButton" Height="40" Width="120" FontSize="18" FontWeight="SemiBold" Background="#4B5AFF" Foreground="#E6E8F0" BorderThickness="0" Margin="0,0,0,0" Click="SaveButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="14">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        Speichern
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
