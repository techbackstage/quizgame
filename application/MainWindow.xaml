<Window x:Class="application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz App" Height="400" Width="300"
        Background="#1E1B2E" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border CornerRadius="10" Background="#2A253B" Padding="20" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBlock Text="HOME"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <Button Content="Quiz starten"
                        Background="#6C4EFF"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="10"
                        Margin="0,0,0,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Width="200"/>

                <Button Content="Kategorien verwalten"
                        Background="#3B354D"
                        Foreground="White"
                        Padding="10"
                        Margin="0,0,0,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Width="200"/>

                <Button Content="Statistik ansehen"
                        Background="#3B354D"
                        Foreground="White"
                        Padding="10"
                        Margin="0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Width="200"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>